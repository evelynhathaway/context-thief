{
	"name": "context-thief",
	"version": "1.0.5",
	"description": "Helper function to steal React context values for testing",
	"keywords": [
		"react",
		"context",
		"test",
		"testing"
	],
	"homepage": "https://github.com/evelynhathaway/context-thief#readme",
	"bugs": {
		"url": "https://github.com/evelynhathaway/context-thief/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/evelynhathaway/context-thief.git"
	},
	"license": "MIT",
	"author": "Evelyn Hathaway <npm@evelyn.dev> (https://evelyn.dev)",
	"sideEffects": false,
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"directories": {
		"lib": "/lib",
		"src": "/src"
	},
	"files": [
		"/lib"
	],
	"scripts": {
		"build": "tsc -p ./tsconfig-build.json",
		"lint": "eslint ./",
		"prepare": "husky install",
		"test": "jest"
	},
	"commitlint": {
		"extends": "./node_modules/conventional-changelog-evelyn/commitlint.config.js"
	},
	"lint-staged": {
		"**/package.json": "sort-package-json",
		"./": "eslint --fix"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/prompt"
		}
	},
	"devDependencies": {
		"@commitlint/prompt": "^12.1.4",
		"@jedmao/location": "^3.0.0",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@testing-library/react": "^11.2.7",
		"@types/jest": "^26.0.23",
		"@types/react": "^17.0.5",
		"@types/react-dom": "^17.0.5",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"commitlint": "^12.1.4",
		"conventional-changelog-evelyn": "^1.3.0",
		"eslint": "^7.26.0",
		"eslint-plugin-evelyn": "^6.1.0",
		"eslint-plugin-import": "^2.23.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-regexp": "^0.10.0",
		"eslint-plugin-testing-library": "^4.4.0",
		"eslint-plugin-unicorn": "^32.0.1",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"lint-staged": "^11.0.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"semantic-release": "^17.4.3",
		"sort-package-json": "^1.50.0",
		"ts-jest": "^26.5.6",
		"typescript": "^4.2.4"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"release": {
		"extends": "conventional-changelog-evelyn/release.config.js"
	}
}
